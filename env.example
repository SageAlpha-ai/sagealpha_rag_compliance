# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4.1
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT_NAME=text-embedding-3-large

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER_NAME=your_container_name

# Chroma Cloud Configuration
CHROMA_HOST=api.trychroma.com
CHROMA_API_KEY=your_chroma_cloud_api_key_here
CHROMA_TENANT=your_tenant_id_here
CHROMA_DATABASE=your_database_name_here
CHROMA_COLLECTION_NAME=compliance

# Optional: API Authentication
# Set RAG_API_KEY to enable API key authentication for /query endpoint
# Leave empty to disable authentication
RAG_API_KEY=

# Optional: CORS Configuration
# Comma-separated list of allowed origins (default: "*" allows all)
# Example: CORS_ORIGINS=https://example.com,https://app.example.com
CORS_ORIGINS=*

# Optional: Logging
# Set to DEBUG, INFO, WARNING, or ERROR (default: INFO)
LOG_LEVEL=INFO

# Optional: Python Environment
# Set to "production" to disable .env file loading (use environment variables only)
PYTHON_ENV=development
