# =============================================================================
# Finance-Grade RAG Chatbot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Azure OpenAI Configuration
# -----------------------------------------------------------------------------
# Get these from Azure Portal > Azure OpenAI > Keys and Endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Deployment names (NOT model names)
# Create these in Azure OpenAI Studio > Deployments
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT_NAME=text-embedding-3-small

# -----------------------------------------------------------------------------
# Azure Blob Storage Configuration
# -----------------------------------------------------------------------------
# Get connection string from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER_NAME=your-container-name

# -----------------------------------------------------------------------------
# Chroma Cloud Configuration
# -----------------------------------------------------------------------------
# Get these from Chroma Cloud dashboard (https://trychroma.com)
CHROMA_HOST=api.trychroma.com
CHROMA_API_KEY=your-chroma-cloud-api-key-here
CHROMA_TENANT=your-tenant-id
CHROMA_DATABASE=your-database-name

# Optional: Collection name (defaults to "documents_collection")
CHROMA_COLLECTION_NAME=finance_documents

# -----------------------------------------------------------------------------
# Optional: Logging Level
# -----------------------------------------------------------------------------
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
